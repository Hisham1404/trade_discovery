# Discovery Cluster Environment Configuration
# Copy this file to .env and set your actual values

# Database Configuration
POSTGRES_DB=discovery_cluster
POSTGRES_USER=discovery_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Authentication & Security
JWT_SECRET_KEY=your_jwt_secret_key_256_bits_minimum
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# External API Keys (for AI agents)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_ai_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key
MISTRAL_API_KEY=your_mistral_api_key

# Market Data APIs
NSE_API_KEY=your_nse_api_key_if_required
BSE_API_KEY=your_bse_api_key_if_required

# News & Social Media APIs
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_api_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Monitoring & Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_USER=your_email@domain.com
EMAIL_SMTP_PASSWORD=your_email_app_password

# Service Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Environment Settings
TZ=Asia/Kolkata
LOG_LEVEL=INFO
DEBUG=false

# Performance Settings
MAX_WORKERS=4
SIGNAL_GENERATION_TIMEOUT=300
API_RATE_LIMIT=100

# Pulsar Configuration
PULSAR_HOST=pulsar
PULSAR_PORT=6650
PULSAR_WEB_PORT=8080

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PASSWORD=optional_elasticsearch_password

# MinIO Configuration (S3-compatible storage)
MINIO_BUCKET_NAME=trading-signals

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=optional_qdrant_api_key

# SMS Notifications
SMS_API_KEY=your_sms_service_api_key

# Pulsar Token
PULSAR_TOKEN=your_pulsar_auth_token_optional

# Environment
ENVIRONMENT=development

# Email/SMS Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# Monitoring & Observability
PROMETHEUS_PASSWORD=optional_prometheus_password 